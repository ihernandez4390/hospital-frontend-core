@model patient

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container">
    <main>
        <div class="row py-5">
            <div class="col-sm-9">
                <h2>Edit Patient - @Model.Name</h2>
            </div>
            <div class="col-sm-3">
                <div class="btn-group" role="group">
                    <a asp-controller="Patient" asp-action="PatientDetails" asp-route-id="@Model.PatientID" type="button" class="btn btn-secondary">Cancel</a>
                    <a id="submitAnchor" type="button" class="btn btn-primary">Save</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mb-3">Patient Details</h4>
                <form asp-controller="Patient" asp-action="EditPatient" method="post">
                    <div class="input-group mb-3">
                        <div class="col-sm-5">
                            <label asp-for="FName" class="form-label"></label>
                            <input asp-for="FName" class="form-control"/>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="MInit" class="form-label"></label>
                            <input asp-for="MInit" class="form-control"/>
                        </div>
                        <div class="col-sm-5">
                            <label asp-for="LName" class="form-label"></label>
                            <input asp-for="LName" class="form-control"/>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="col-sm-5">
                            <label asp-for="BirthDate" class="form-label"></label>
                            <input asp-for="BirthDate" class="form-control"/>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="Sex" class="form-label"></label>
                            <input asp-for="Sex" class="form-control"/>
                        </div>
                        <div class="col-sm-5">
                            <label asp-for="ContactNo" class="form-label"></label>
                            <input asp-for="ContactNo" class="form-control"/>
                        </div>
                    </div>
                    <div id="hiddenFormItems" style="display: none;">
                        <label asp-for="PatientID" class="form-label"></label>
                        <input asp-for="PatientID" class="form-control" readonly />
                        <input id="submitButton" type="submit" name="submit" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>
@section Scripts {
    <script src="~/js/EditPatient.js" asp-append-version="true"></script>
}
