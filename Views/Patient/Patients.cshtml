@model List<patient>

@{
    ViewData["Title"] = "Patients";
}

<div class="container">
    <main>
        <div class="row py-5">
            <div class="col-sm-11">
                <h2>All Patients</h2>
            </div>
            <div class="col-sm-1">
                <div class="btn-group" role="group">
                    <a asp-controller="Patient" asp-action="AddPatient" type="button" class="btn btn-primary">Add Patient</a>
                </div>
            </div>
        </div>
        <div class="row table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>
                            Patient ID
                        </th>
                        <th>
                            Patient Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++) {
                    <tr>
                        <td>
                            <a asp-controller="Patient" asp-action="PatientDetails" asp-route-id="@Model[i].PatientID">@Model[i].PatientID</a> 
                        </td>
                        <td>
                            @Model[i].Name
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>